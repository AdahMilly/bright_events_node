{
  "name": "bright_events_node",
  "version": "1.0.0",
  "description": "just a project to level up on typescript ",
  "main": "dist/index.js",
  "repository": "git@github.com:Rodgers-M/bright_events_node.git",
  "author": "<mkishagha@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "start:dev": "env-cmd -e development tsc-watch --onSuccess \"node ./dist/index.js\"",
    "db:migrate:make": "env-cmd -e development ts-node -P ./tsconfig.json $(npm bin)/knex migrate:make -x ts --knexfile ./src/database/knexfile.ts",
    "db:migrate": "env-cmd -e development  ts-node -P ./tsconfig.json $(npm bin)/knex migrate:latest --knexfile ./src/database/knexfile.ts",
    "db:migrate:rollback": "env-cmd -e development ts-node -P ./tsconfig.json $(npm bin)/knex migrate:rollback --knexfile ./src/database/knexfile.ts",
    "test": "npx env-cmd -e test npx jest  --config ./jest/integration.json --detectOpenHandles --runInBand --forceExit"
  },
  "jest": {
    "verbose": true
  },
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@hapi/joi": "^15.1.1",
    "app-root-path": "^2.2.1",
    "babel-jest": "^24.9.0",
    "bcrypt": "^3.0.6",
    "dot-env": "0.0.1",
    "env-cmd": "^10.0.1",
    "express": "^4.17.1",
    "knex": "^0.19.5",
    "knex-stringcase": "^1.3.0",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "stream": "^0.0.2",
    "tsc-watch": "^2.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^15.0.3",
    "@types/jest": "^24.0.19",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.2",
    "jest": "^24.9.0",
    "knex-cleaner": "^1.3.0",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3",
    "typescript-tslint-plugin": "^0.5.4"
  }
}
